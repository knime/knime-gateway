<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.knime.maven</groupId>
		<artifactId>ap.parent</artifactId>
		<version>1.0.0</version>
	</parent>

	<groupId>com.knime</groupId>
	<artifactId>knime-gateway</artifactId>
	<version>${revision}${changelist}</version>
	<packaging>pom</packaging>

	<properties>
		<revision>4.2.0</revision>
		<changelist>-SNAPSHOT</changelist>
		<feature-branch-extension.branchListProperty>git.branch</feature-branch-extension.branchListProperty>
		<feature-branch-extension.appendArtifactoryProperties>false</feature-branch-extension.appendArtifactoryProperties>
	</properties>

	<modules>
		<module>com.knime.gateway</module>
		<module>com.knime.gateway.json</module>
		<module>com.knime.gateway.explorer</module>
		<module>com.knime.gateway.jsonrpc.local</module>
		<module>com.knime.gateway.jsonrpc.remote</module>
		<module>com.knime.gateway.local</module>
		<module>com.knime.gateway.remote</module>
		<module>com.knime.gateway.rest.local</module>
		<module>com.knime.gateway.testing</module>
		<module>com.knime.gateway.json.testing</module>
		<module>com.knime.gateway.testing.helper</module>
		<module>com.knime.gateway.local.testing</module>
		<module>com.knime.gateway.remote.testing</module>
		<module>com.knime.features.gateway.explorer</module>
		<module>com.knime.features.gateway.jsonrpc.local</module>
		<module>com.knime.features.gateway.remote</module>
		<module>com.knime.features.gateway.rest.local</module>
		<module>com.knime.update.gateway</module>
	</modules>

	<repositories>
		<repository>
			<id>p2-knime-core</id>
			<layout>p2</layout>
			<url>${knime.core.p2}</url>
		</repository>
		<repository>
			<id>p2-knime-shared</id>
			<layout>p2</layout>
			<url>${knime.shared.p2}</url>
		</repository>
		<repository>
			<id>p2-knime-tp</id>
			<layout>p2</layout>
			<url>${knime.tp.p2}</url>
		</repository>
		<repository>
			<id>p2-knime-base</id>
			<layout>p2</layout>
			<url>${knime.base.p2}</url>
		</repository>
		<repository>
			<id>p2-knime-js-base</id>
			<layout>p2</layout>
			<url>${knime.js.base.p2}</url>
		</repository>
		<repository>
			<id>p2-knime-svg</id>
			<layout>p2</layout>
			<url>${knime.svg.p2}</url>
		</repository>
		<repository>
			<id>p2-knime-workbench</id>
			<layout>p2</layout>
			<url>${knime.workbench.p2}</url>
		</repository>
		<repository>
			<id>p2-knime-expressions</id>
			<layout>p2</layout>
			<url>${knime.expressions.p2}</url>
		</repository>
		<repository>
			<id>p2-knime-server-client</id>
			<layout>p2</layout>
			<url>${knime.server.client.p2}</url>
		</repository>
		<repository>
			<id>p2-knime-json</id>
			<layout>p2</layout>
			<url>${knime.json.p2}</url>
		</repository>
		<repository>
			<id>p2-knime-javasnippet</id>
			<layout>p2</layout>
			<url>${knime.javasnippet.p2}</url>
		</repository>
		<repository>
			<id>p2-knime-executor</id>
			<layout>p2</layout>
			<url>${knime.executor.p2}</url>
		</repository>
		<repository>
			<id>p2-knime-reporting</id>
			<layout>p2</layout>
			<url>${knime.reporting.p2}</url>
		</repository>
		<repository>
			<id>p2-knime-product</id>
			<layout>p2</layout>
			<url>${knime.product.p2}</url>
		</repository>
		<repository>
			<id>p2-knime-server-api</id>
			<layout>p2</layout>
			<url>${knime.server.api.p2}</url>
		</repository>
	</repositories>

	<build>
		<plugins>
			<plugin>
				<groupId>org.eclipse.tycho.extras</groupId>
				<artifactId>tycho-source-feature-plugin</artifactId>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.eclipse.tycho</groupId>
				<artifactId>tycho-source-plugin</artifactId>
				<configuration>
					<skip>true</skip>
				</configuration>
			</plugin>

		</plugins>
	</build>
</project>
